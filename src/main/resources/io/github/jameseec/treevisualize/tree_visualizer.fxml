<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox pickOnBounds="false" prefHeight="400.0" prefWidth="640.0" stylesheets="@styles/styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.github.jameseec.treevisualize.controller.VisualizeController">
  <children>
    <MenuBar VBox.vgrow="NEVER">
      <menus>
        <Menu mnemonicParsing="false" text="Edit">
          <items>
                  <MenuItem mnemonicParsing="false" onAction="#onClear" text="Clear" />
          </items>
        </Menu>
        <Menu mnemonicParsing="false" text="Mode">
          <items>
                  <MenuItem fx:id="switchBSTButton" mnemonicParsing="false" onAction="#onSwitchBST" text="Simple BST" />
                  <MenuItem fx:id="switchAVLButton" mnemonicParsing="false" onAction="#onSwitchAVL" text="AVL Tree" />
          </items>
        </Menu>
      </menus>
    </MenuBar>
      <StackPane fx:id="viewportStack" VBox.vgrow="ALWAYS">
         <children>
            <Pane fx:id="contentPane" prefHeight="2000.0" prefWidth="2000.0" />
            <VBox alignment="TOP_CENTER" fillWidth="false" maxWidth="-Infinity" pickOnBounds="false" prefWidth="100.0" spacing="2.0" StackPane.alignment="TOP_RIGHT">
               <children>
                  <VBox alignment="CENTER" maxHeight="-Infinity" prefHeight="90.0" prefWidth="100.0" styleClass="setting-panel" VBox.vgrow="NEVER">
                     <children>
                        <Label text="Add Node" />
                        <TextField fx:id="addField">
                           <padding>
                              <Insets bottom="3.0" left="5.0" right="5.0" top="3.0" />
                           </padding>
                        </TextField>
                        <Button mnemonicParsing="false" onAction="#onAddNode" text="Add">
                           <VBox.margin>
                              <Insets bottom="3.0" top="3.0" />
                           </VBox.margin>
                        </Button>
                     </children>
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                     <padding>
                        <Insets right="30.0" />
                     </padding>
                  </VBox>
                  <VBox alignment="CENTER" maxHeight="-Infinity" prefHeight="90.0" prefWidth="100.0" styleClass="setting-panel" VBox.vgrow="NEVER">
                     <children>
                        <Label text="Delete node" />
                        <TextField fx:id="deleteField">
                           <padding>
                              <Insets bottom="3.0" left="5.0" right="5.0" top="3.0" />
                           </padding>
                        </TextField>
                        <Button mnemonicParsing="false" onAction="#onDeleteNode" text="Delete">
                           <VBox.margin>
                              <Insets bottom="3.0" top="3.0" />
                           </VBox.margin>
                        </Button>
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" maxHeight="-Infinity" prefHeight="90.0" prefWidth="100.0" styleClass="setting-panel" VBox.vgrow="NEVER">
                     <children>
                        <Label text="Find node" />
                        <TextField fx:id="findField">
                           <padding>
                              <Insets bottom="3.0" left="5.0" right="5.0" top="3.0" />
                           </padding>
                        </TextField>
                        <Button mnemonicParsing="false" onAction="#onFindNode" text="Find">
                           <VBox.margin>
                              <Insets bottom="3.0" top="3.0" />
                           </VBox.margin>
                        </Button>
                     </children>
                  </VBox>
                  <Button mnemonicParsing="false" onAction="#onClear" text="Clear tree" />
               </children>
               <StackPane.margin>
                  <Insets right="5.0" top="5.0" />
               </StackPane.margin>
            </VBox>
            <HBox alignment="BOTTOM_RIGHT" maxHeight="-Infinity" pickOnBounds="false" prefHeight="40.0" prefWidth="200.0" StackPane.alignment="BOTTOM_CENTER">
               <children>
                  <HBox alignment="BOTTOM_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="3.0" HBox.hgrow="ALWAYS">
                     <children>
                      <Button mnemonicParsing="false" onAction="#onResetZoom" text="Reset zoom">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#onResetPanning" text="Reset Panning" />
                     </children>
                     <padding>
                        <Insets bottom="5.0" left="5.0" />
                     </padding>
                  </HBox>
                  <Label fx:id="infoLabel" alignment="BOTTOM_RIGHT" text="Messages will appear here" wrapText="true" HBox.hgrow="NEVER">
                     <padding>
                        <Insets right="5.0" />
                     </padding>
                  </Label>
               </children>
            </HBox>
         </children>
      </StackPane>
  </children>
</VBox>
